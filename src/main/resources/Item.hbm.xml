<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="org.alex.model.Item" table="item">
        <id name="id" type="int" column="id">
            <generator class="increment" />
        </id>

        <property name="total" column="total" type="big_decimal"/>

        <set name="carts" table="item_cart" inverse="false" lazy="true" fetch="select" cascade="all" >
            <key>
                <column name="item_id" not-null="true"></column>
            </key>
            <many-to-many entity-name="org.alex.model.Cart">
                <column name="cart_id" not-null="true"></column>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>